extends ../layout

block content
	.single-widget-container
		section.widget.login-widget
			header.text-align-center
				h4 Login to your account
			.body
				form.no-margin(action='/', method='get')
					fieldset
						.form-group.no-margin
							label(for='email')
							.input-group.input-group-lg
								span.input-group-addon
									i.eicon-user
								input#email.form-control.input-lg(type='email', placeholder='Your Email')
						.form-group
							label(for='password') Password
							.input-group.input-group-lg
								span.input-group-addon
									i.fa.fa-lock
								input#password.form-control.input-lg(type='password', placeholder='Your Password')
					.form-actions
						button.btn.btn-block.btn-lg.btn-danger(type='submit')
							span.small-circle
								i.fa.fa-caret-right
							small Sign In
						.forgot
							a.forgot(href='#') Forgot Username or Password?
			footer
				.facebook-login
					a(href='/index')
						span
							i.fa.fa-facebook-square.fa-lg
							| LogIn with Facebook
